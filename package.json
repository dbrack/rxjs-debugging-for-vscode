{
  "name": "rxjs-debugging-for-vs-code",
  "displayName": "RxJS Debugging for VS Code",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Debuggers"
  ],
  "publisher": "manuelalabor",
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "typescript"
      },
      {
        "language": "javascript"
      },
      {
        "language": "typescriptreact"
      },
      {
        "language": "typescriptreact"
      }
    ],
    "commands": [
      {
        "command": "rxjs-debugging-for-vs-code.command.debugRxJS",
        "title": "%debug.rxjs%",
        "icon": "$(debug)"
      }
    ],
    "menus": {
      "debug/callstack/context": [
        {
          "command": "rxjs-debugging-for-vs-code.command.debugRxJS",
          "group": "navigation",
          "when": "debugType == pwa-extensionHost && callStackItemType == 'session' || debugType == node-terminal && callStackItemType == 'session' || debugType == pwa-node && callStackItemType == 'session' || debugType == pwa-chrome && callStackItemType == 'session' || debugType == pwa-msedge && callStackItemType == 'session'"
        }
      ]
    },
    "debuggers": [
      {
        "type": "rxjs",
        "label": "RxJS Debugger",
        "program": "./out/debugAdapter/index.js",
        "runtime": "node",
        "configurationAttributes": {
          "attach": {
            "required": [
              "processId"
            ],
            "properties": {
              "processId": {
                "type": [
                  "number",
                  "string"
                ],
                "default": "",
                "description": ""
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "test": "yarn test:integration",
    "pretest:integration": "yarn run compile",
    "test:integration": "node ./out/integrationTest/runTest.js",
    "pretty": "prettier --write",
    "package": "vsce package --yarn"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.53.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "husky": "^5.1.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.1.3",
    "prettier": "^2.2.1",
    "typescript": "^4.0.2",
    "vsce": "^1.85.0",
    "vscode-test": "^1.4.0"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "yarn pretty"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "vscode-debugadapter": "^1.45.0"
  }
}
